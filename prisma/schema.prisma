// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  username       String
  discriminator  String?
  avatar         String?
  name           String?
  email          String?  @unique
  emailVerified  DateTime?
  image          String?
  lastActive     DateTime @default(now())
  createdAt      DateTime @default(now())

  accounts       Account[]
  sessions       Session[]
  vacationBalance UserVacationBalance?
  timeEntries     TimeEntry[]
  activeSessions  ActiveSession[]
  vacationRequests VacationRequest[]
  auditLogs       AuditLog[]

  @@map("users")
}

model UserVacationBalance {
  userId           String   @id @map("user_id")
  totalDays        Int      @default(25) @map("total_days")
  usedDays         Int      @default(0) @map("used_days")
  pendingDays      Int      @default(0) @map("pending_days")
  carriedOverDays  Int      @default(0) @map("carried_over_days")
  lastUpdated      DateTime @default(now()) @map("last_updated")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("user_vacation_balance")
}

model TimeEntry {
  id         Int      @id @default(autoincrement())
  userId     String @map("user_id")
  entryType  String @map("entry_type")
  timestamp  DateTime @default(now())
  location   String   @default("office")
  notes      String?
  createdAt  DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, timestamp])
  @@index([timestamp])
  @@index([entryType])
  @@map("time_entries")
}

model ActiveSession {
  id          Int      @id @default(autoincrement())
  userId      String
  sessionType String
  startTime   DateTime @default(now())
  location    String   @default("office")
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, sessionType])
  @@index([userId])
  @@map("active_sessions")
}

model VacationRequest {
  id               Int      @id @default(autoincrement())
  userId           String @map("user_id")
  requestedDays    Int @map("requested_days")
  startDate        DateTime @map("start_date")
  endDate          DateTime @map("end_date")
  reason           String?
  status           String   @default("pending")
  pmApprovedBy     String? @map("pm_approved_by")
  pmApprovedAt     DateTime? @map("pm_approved_at")
  adminApprovedBy  String? @map("admin_approved_by")
  adminApprovedAt  DateTime? @map("admin_approved_at")
  rejectedBy       String? @map("rejected_by")
  rejectedAt       DateTime? @map("rejected_at")
  rejectionReason  String? @map("rejection_reason")
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @default(now()) @map("updated_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([startDate, endDate])
  @@map("vacation_requests")
}

model ServerSetting {
  guildId       String   @id
  adminRoleId   String?
  pmRoleId      String?
  workStartTime String   @default("09:00")
  workEndTime   String   @default("17:00")
  timezone      String   @default("Europe/Sarajevo")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @default(now())

  @@map("server_settings")
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    String?
  action    String
  details   String?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId, timestamp])
  @@index([action])
  @@map("audit_log")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}